<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="normalTextWhite" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="smallTextWhite" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="CalendarIcon">
        <!--<item name="android:drawableLeft">@drawable/icon_calendar_white_12dp</item>-->
        <!--<item name="android:drawablePadding">5dp</item>-->
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="PaddingBottom">
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="PaddingTop">
        <item name="android:paddingTop">20dp</item>
    </style>

    <style name="PaddingSameTopBottom">
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="PaddingTopBottom">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>


</resources>
